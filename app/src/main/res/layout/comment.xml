<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_picture"
            android:contentDescription="Profile picture" />

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/comment_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment text goes here"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/comment_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="03/28/2023"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/thumb_up_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_thumb_up"
            android:contentDescription="Thumb up button" />

        <TextView
            android:id="@+id/thumb_up_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/thumb_down_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_thumb_down"
            android:contentDescription="Thumb down button"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/thumb_down_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_comment"
            />

    </LinearLayout>

</LinearLayout>