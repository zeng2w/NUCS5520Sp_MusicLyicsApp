<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:orientation="vertical"
    tools:context=".final_project.CreateEditPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCreateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create/Edit"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_weight="3"

            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editPage_songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/design_default_color_on_primary"
                android:ems="10"
                android:hint="Song Name..."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editPage_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/design_default_color_on_primary"
                android:ems="10"
                android:hint="Artist..."
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editPage_editLyric"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Lyrics..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPage_editTranslate"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:ems="10"
        android:hint="Romanization/Translation..."
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/editPage_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accessible to other users"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editPage_buttonCancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="Cancel" />

        <Button
            android:id="@+id/editPage_buttonSave"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="save" />
    </LinearLayout>

</LinearLayout>